@using webBangHangOnline.Common
@using (Ajax.BeginForm("AddSetting", "SettingSystem", new AjaxOptions
{
    OnBegin = "OnBegin",
    OnSuccess = "OnSuccess",
    OnFailure = "OnFailure"
}))
{
    <script>
        function OnBegin(rs) {
            $('#load_page').html('Đang lưu..')
        }
        function OnSuccess(rs) {
            $('#load_page').html('')
        }
        function OnFailure(rs) { }
    </script>

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
<div class="col-md-12">
    <div class="card">
        <div class="card-header p-2">
            <ul class="nav nav-pills">
                <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">Thông tin</a></li>
                <li class="nav-item"><a class="nav-link" href="#timeline" data-toggle="tab">Seo</a></li>
            </ul>
        </div><!-- /.card-header -->
        <div class="card-body">
            <div class="tab-content">
                <div class="tab-pane active" id="activity">
                    <!-- Post -->
                    <div class="form-group">
                        <label >Title</label>
                        <input type="text" class="form-control" name="SettingTitle" placeholder="Tiêu đề" value="@SettingHelper.GetValue("SettingTitle")">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputFile">Ảnh đại diện</label>
                        <div class="input-group">
                            <div class="custom-file">
                                <input type="text" class="form-control" name="SettingLogo" id="txtImage" placeholder="Logo" value="@SettingHelper.GetValue("SettingLogo")">
                            </div>
                            <div class="input-group-append">
                                <input type="button" value="Tải ảnh" onclick="browseServer('txtImage')" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label >HotLine</label>
                        <input type="text" class="form-control" name="SettingHotline" placeholder="Hotline" value="@SettingHelper.GetValue("SettingHotline")">
                    </div>
                    <div class="form-group">
                        <label >Email address</label>
                        <input type="email" class="form-control" name="SettingEmail" placeholder="Enter email" value="@SettingHelper.GetValue("SettingEmail")">
                    </div>
                    <!-- /.post -->
                </div>
                <!-- /.tab-pane -->
                <div class="tab-pane" id="timeline">
                    <!-- The timeline -->
                    <div class="form-group">
                        <label>Tiêu đề Seo</label>
                        <input type="text" class="form-control" name="SettingTitleSeo" placeholder="Tiêu đề Seo" value="@SettingHelper.GetValue("SettingTitleSeo")">
                    </div>
                    <div class="form-group">
                        <label>Mô tả Seo</label>
                        <textarea class="form-control" name="SettingDesSeo" placeholder="Mô tả Seo">@SettingHelper.GetValue("SettingDesSeo")</textarea>
                    </div>
                    <div class="form-group">
                        <label>Từ khóa Seo</label>
                        <textarea class="form-control" name="SettingKeySeo" placeholder="Từ khóa Seo">@SettingHelper.GetValue("SettingKeySeo")</textarea>
                    </div>
                </div>
            </div>
            <!-- /.tab-content -->
        </div><!-- /.card-body -->
    </div>
    <div class="form-group">
        <a href="/admin/" class="btn btn-danger">Quay lại</a>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
    <!-- /.card -->
</div>
}
