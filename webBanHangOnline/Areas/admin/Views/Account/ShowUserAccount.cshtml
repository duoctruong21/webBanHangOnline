@model webBangHangOnline.Models.ApplicationUser

@{
    ViewBag.Title = "Tài khoản";
}
@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/category" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewBag.Title</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@ViewBag.Title</h3>

        </div>
        <div class="card-body">
           <table class="table">
               <thead>
                   <tr>
                       <th>Tài Khoản</th>
                       <th>Họ và tên</th>
                       <th>Số điện thoại</th>
                       <th>Địa chỉ</th>
                       <th>Quyền</th>
                       <th>Quản lý</th>
                   </tr>
               </thead>
               <tbody>
                   <tr>
                       <td>@Model.Email</td>
                       <td>@Model.Fullname</td>
                       <td>@Model.Phone</td>
                       <td>@Model.Address</td>
                       <td>@ViewBag.Role</td>
                       <td></td>
                   </tr>
               </tbody>
           </table>            
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
