@model IEnumerable<webBangHangOnline.Models.ShoppingCartItem>
@{
    ViewBag.Title = "Giỏ hàng";
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/categories_styles.css">
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/categories_responsive.css">
<div class="container product_section_container">
    <div class="row">
        <div class="col product_section clearfix">

            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a href="index.html">Home</a></li>
                    <li class="active"><a href="#"><i class="fa fa-angle-right" aria-hidden="true"></i>Giỏ hàng</a></li>
                </ul>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <table class="table">
                        <tr class="text-center">
                            <th>STT</th>
                            <th>Ảnh sản phẩm</th>
                            <th>Tên sản phẩm</th>
                            <th>Giá</th>
                            <th>Số lượng</th>
                            <th>Thành tiền</th>
                            <th></th>
                        </tr>
                        @if (Model != null && Model.Any())
                        {
                            var i = 0;
                            decimal tongtien=0;
                            foreach (var item in Model)
                            {
                                <tr id="trow_@item.ProductId" class="text-center">
                                    <td>@(i+1)</td>
                                    <td><img src="@item.ProductImg" /></td>
                                    <td><a href="/chi-tiet-san-pham/@item.Alias-@item.ProductId"> @item.ProductName</a></td>
                                    <td>@item.Price.ToString("###,###,###.##")</td>
                                    <td>@item.Quantity</td>
                                    <td>@Math.Abs(@item.Price * @item.Quantity).ToString("###,###,###.##")</td>
                                    <td><a href="#" data-id="@item.ProductId" class="btn btn-sm btn-danger btnDelete">Xóa</a></td>
                                </tr>
                                i++;
                                tongtien += @item.Price * @item.Quantity;
                            }
                            <tr>
                                <td colspan="4"></td>
                                <td>Tổng tiền:</td>
                                <td>@tongtien.ToString("###,###,###.##")</td>
                            </tr>
                        }
                        else
                        {
                                <tr>
                                    <td>Giỏ hàng trống</td>
                                </tr>
                            }
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>
@section scripts{

}